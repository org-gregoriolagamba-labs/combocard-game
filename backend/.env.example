# Backend Environment Configuration
# Copy this file to .env and update the values

# ===================
# Server Configuration
# ===================
NODE_ENV=development
PORT=3001

# ===================
# CORS Configuration
# ===================
# Frontend URL for CORS (use comma-separated values for multiple origins)
CORS_ORIGIN=http://localhost:3000

# ===================
# Rate Limiting
# ===================
# Window duration in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===================
# Game Configuration
# ===================
# Default credits for new players
DEFAULT_CREDITS=0
# Maximum credits per purchase
MAX_CREDITS_PER_PURCHASE=10000
# Draw cooldown in seconds
DRAW_COOLDOWN_SECONDS=8

# ===================
# Prize Distribution (percentages)
# ===================
PRIZE_TRIS=0.10
PRIZE_SEQUENZA=0.15
PRIZE_SCOPA=0.20
PRIZE_NAPOLA=0.25
PRIZE_COMBOCARD_REALE=0.30
